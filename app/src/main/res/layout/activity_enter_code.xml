<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_enter_code_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_horizontal_padding"
    android:paddingEnd="@dimen/activity_horizontal_padding"
    android:paddingTop="170dp"
    android:paddingBottom="170dp"
    tools:context=".EnterCodeActivity">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_enter_code_codeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_confirmation_code"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/btn_enter_code_submitBtn"
        app:layout_constraintEnd_toEndOf="@+id/cl_enter_code_parent_layout"
        app:layout_constraintStart_toStartOf="@+id/cl_enter_code_parent_layout"
        app:layout_constraintTop_toTopOf="@+id/cl_enter_code_parent_layout" />

    <Button
        android:id="@+id/btn_enter_code_submitBtn"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_submit"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cl_enter_code_parent_layout"
        app:layout_constraintEnd_toEndOf="@+id/cl_enter_code_parent_layout"
        app:layout_constraintStart_toStartOf="@+id/cl_enter_code_parent_layout"
        app:layout_constraintTop_toBottomOf="@id/et_enter_code_codeInput" />

</android.support.constraint.ConstraintLayout>