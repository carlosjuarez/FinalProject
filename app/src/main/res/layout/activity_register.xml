<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_register_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_horizontal_padding"
    android:paddingEnd="@dimen/activity_horizontal_padding"
    android:paddingTop="@dimen/activity_vertical_padding"
    android:paddingBottom="@dimen/activity_vertical_padding"
    tools:context=".RegisterActivity">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_register_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/cl_register_parent_layout"
        app:layout_constraintStart_toStartOf="@+id/cl_register_parent_layout"
        app:layout_constraintEnd_toEndOf="@+id/cl_register_parent_layout"
        app:layout_constraintBottom_toTopOf="@+id/et_register_last_name"
        android:hint="@string/prompt_first_name"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_register_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_register_first_name"
        app:layout_constraintBottom_toTopOf="@+id/et_register_email"
        app:layout_constraintStart_toStartOf="@+id/cl_register_parent_layout"
        app:layout_constraintEnd_toEndOf="@+id/cl_register_parent_layout"
        android:hint="@string/prompt_last_name"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_register_last_name"
        app:layout_constraintBottom_toTopOf="@+id/et_register_city"
        app:layout_constraintStart_toStartOf="@+id/cl_register_parent_layout"
        app:layout_constraintEnd_toEndOf="@+id/cl_register_parent_layout"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_register_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_register_email"
        app:layout_constraintBottom_toTopOf="@+id/et_register_password"
        app:layout_constraintStart_toStartOf="@+id/cl_register_parent_layout"
        app:layout_constraintEnd_toEndOf="@+id/cl_register_parent_layout"
        android:hint="@string/prompt_city"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_register_city"
        app:layout_constraintBottom_toTopOf="@+id/et_register_retype_password"
        app:layout_constraintStart_toStartOf="@+id/cl_register_parent_layout"
        app:layout_constraintEnd_toEndOf="@+id/cl_register_parent_layout"
        android:hint="@string/prompt_password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_register_retype_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_register_password"
        app:layout_constraintBottom_toTopOf="@+id/btn_register_registerBtn"
        app:layout_constraintStart_toStartOf="@+id/cl_register_parent_layout"
        app:layout_constraintEnd_toEndOf="@+id/cl_register_parent_layout"
        android:hint="@string/prompt_retype_password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true" />


    <Button
        android:id="@+id/btn_register_registerBtn"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_register_retype_password"
        app:layout_constraintBottom_toBottomOf="@+id/cl_register_parent_layout"
        app:layout_constraintStart_toStartOf="@+id/cl_register_parent_layout"
        app:layout_constraintEnd_toEndOf="@+id/cl_register_parent_layout"
        android:text="@string/action_register"
        android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>